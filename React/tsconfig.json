{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
    "node_modules/interactr/**/*"
  ],
  "references": [
    {
      "path": "../ArchitectingTheSpa.Core/"
    },
    {
      "path": "../ArchitectingTheSpa.Application/"
    }
  ]
}
